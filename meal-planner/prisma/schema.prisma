// prisma/scheme.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Meal {
  id          Int      @id @default(autoincrement())
  description String
  date        DateTime
  likes       Like[]
}

model FamilyMember {
  id          Int     @id @default(autoincrement())
  displayName String
  color       String
  likes       Like[]
}

model Like {
  mealId       Int
  familyMemberId Int
  meal         Meal       @relation(fields: [mealId], references: [id])
  familyMember FamilyMember @relation(fields: [familyMemberId], references: [id])

  @@id([mealId, familyMemberId])
}

